<div class="form-row">
    <div class="form-item">
        <label for="">书的名字</label>
        <input type="text" name="title" value="<%= book.title %>">
    </div>
    <div class="form-item">
        <label for="">作者</label>
        <select name="author">
            <% authors.forEach(author => { %>
            <% if (author.id == book.author) { %>
            <option selected label="<%= author.name %>" value="<%= author.id %>">
            <%  } else { %>
            <option label="<%= author.name %>" value="<%= author.id %>">
            <% } %>
        <% }) %>
        </select>
    </div>
</div>
<div class="form-row">
    <div class="form-item">
        <label for="">发表日期</label>
        <input type="date" name="publishDate" value="<%= book.publishDate == null ? '' : book.publishDate.toISOString().split('T')[0] %>">
    </div>
    <div class="form-item">
        <label for="">页数</label>
        <input type="number" name="pageCount" min="1" value="<%= book.pageCount %>">
    </div>
</div>
<div class="form-row">
    <div class="form-item form-item-no-grow">
        <label for="">封面</label>
        <input type="file" name="cover" class="book-cover filepond" >
    </div>
    <div class="form-item">
        <label for="">内容简介</label>
        <textarea  name="description"><%= book.description %></textarea>
    </div>
</div>